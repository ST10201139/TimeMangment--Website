@model Final_POE_TimeMangement.Models.Semester

@{
    ViewData["Title"] = "Edit";
}
<style>
    th, td {
        border: 1px solid #83EEFF;
    }

    .table-background {
        background: linear-gradient(#ADD8E6,white);
    }

    h2 {
        color: #ADD8E6
    }

    th {
        color: #BC13FE
    }

</style>
<h1>Edit</h1>

<h4>Semester</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SemesterId" />
            <div class="form-group">
                <label asp-for="SemesterName" class="control-label"></label>
                <input asp-for="SemesterName" class="form-control" />
                <span asp-validation-for="SemesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterWeeks" class="control-label"></label>
                <input asp-for="SemesterWeeks" class="form-control" />
                <span asp-validation-for="SemesterWeeks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
